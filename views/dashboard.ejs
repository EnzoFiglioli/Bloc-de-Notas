<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - To-Do List</title>
    <script src="https://kit.fontawesome.com/0c273bd24b.js" crossorigin="anonymous"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

</head>
<body>
    <style>
        #tarea-actualizar, #tarea-eliminar, #logout {
            cursor: pointer;
        }
    </style>
    <header class="bg-teal-600 text-white p-6 shadow-md flex justify-between items-center">
        <a href="/" class="text-3xl font-semibold">TodoListo</a>
            <span id="logout" class="hover:text-teal-200" onclick="cerrarSesion(event)">
                <i class="fa-solid fa-power-off pr-3"></i>Cerrar sesi√≥n
            </span>
        </div>
    </header>
    <h3 class="text-center text-lg font-semibold text-teal-600 mt-4">
        Hoy es <span id="current-date" class="font-bold text-xl text-teal-800"></span>
    </h3>
    
    <main class="flex p-8 space-x-8">
        <aside class="w-1/4 bg-teal-100 dark:bg-teal-800 p-6 rounded-lg shadow-md" id="diasSemana">
        </aside>

        <section class="w-3/4 bg-white dark:bg-gray-800 dark:text-gray-200 p-8 rounded-xl shadow-lg space-y-6">
            <h1 class="text-4xl font-bold text-center text-teal-600 dark:text-teal-300">Lista de tareas</h1>

            <form id="task-form" class="flex space-x-4 items-center">
                <input id="task-input" type="text" placeholder="Escribe una tarea..." class="dark:text-black w-full p-4 border-2 border-teal-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500">
                <input type="date" id="fecha" class="p-4 border-2 border-teal-300 rounded-lg dark:text-black">
                <button type="submit" class="w-36 bg-teal-600 text-white p-4 rounded-lg hover:bg-teal-700 transition-colors">Agregar</button>
            </form>

            <!-- Task List -->
            <ul id="task-list" class="space-y-4">
            </ul>
        </section>
    </main>
    <footer class="bg-gray-100 dark:bg-gray-700 text-center p-4 mt-8">
        <p class="text-gray-600 dark:text-gray-300">&copy; <script>document.write(new Date().getFullYear())</script> ToDoApp. Todos los derechos reservados.</p>
    </footer>
    <script src="./js/main.js"></script>
    <script>
        // Mostrar la fecha actual
        document.getElementById("current-date").innerText = new Date().toLocaleDateString();

        // Alternar modo oscuro
        const toggleDarkMode = () => {

            const htmlElement = document.documentElement;
            if (htmlElement.classList.contains('dark')) {
                htmlElement.classList.remove('dark');
                localStorage.setItem('theme', 'light');
            } else {
                htmlElement.classList.add('dark');
                localStorage.setItem('theme', 'dark');
            }
        };

        if (localStorage.getItem('theme') === 'dark') {
            document.documentElement.classList.add('dark');
        } else {
            document.documentElement.classList.remove('dark');
            
        }

    </script>
</body>
</html>
